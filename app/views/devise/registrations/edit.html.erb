
<div class="container">

<h2>Edit <%= resource_name.to_s.humanize %></h2>


<div class="form-edit">

<div class="container">

    <hr>
  <div class="row align-items-center">
      <!-- left column -->
      <div class="col-md-4">
        <div class="text-left">
          <h3>Avatar actuel</h3>
<%if current_user.avatar.attached?%>
  <%= image_tag current_user.avatar, alt: 'avatar' %>
<%end%>
          
          <h6>Upload a different photo...</h6>
<%= form_tag user_avatar_index_path(current_user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre Ã  jour" %>
<% end %>
        </div>
      </div>
<div class="col-md-8 personal-info">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

          <div class="form-group">
            <label class="col-lg-3 control-label">First name:</label>
            <div class="col-lg-8">
              <%= f.text_field :first_name, autofocus: true, autocomplete: "First name" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Last name:</label>
            <div class="col-lg-8">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "Last_name" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

            <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Confirm password:</label>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <%= f.submit "Change " %>
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
<% end %>
 </div>
 <div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
</div>
 </div></div></div></div></div>
