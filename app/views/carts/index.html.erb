
<div class="container">
    
   <div class="card shopping-cart">
            <div class="card-header  text-dark">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                Liste de Commandes 
                <a href="" class="btn btn-outline-info btn-sm pull-right">Retour aux produits</a>
                <div class="clearfix"></div>
            </div>
            <div class="card-body">
                    <!-- PRODUCT -->
                    <% @items.each do |item| %>
                    <div class="row">
                        <div class="col-12 col-sm-12 col-md-2 text-center">
                                <img class="img-responsive" src="http://placehold.it/120x80" alt="prewiew" width="120" height="80">
                        </div>
                        <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                            <h4 class="product-name"><strong><%= item.name %></strong></h4>
                            <h4>
                                <small><%= item.description %></small>
                            </h4>
                        </div>
                        <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                            <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                                <h6><strong><%= item.price %><span class="text-muted">x</span></strong></h6>
                            </div>
                            <div class="col-3 col-sm-3 col-md-3">
                                <div class="quantity">
                                    <input type="number" step="1" max="99" min="1" value="1" title="Qty" class="qty" size="4">
                                </div>
                            </div>

                            </div>
                        </div>
                        <% end %>
                    </div>

               
                    <hr>
                    <!-- END PRODUCT -->
                    

                <div class="pull-right">

                    <div class="pull-right">

                    <a href="" class="btn btn-outline-secondary pull-right">
                        Update shopping cart
                    </a>
                </div>
            </div>
            <div class="card-footer">

                <div class="pull-right" style="margin: 10px">
                    <a href="" class="btn btn-success pull-right">Checkout</a>
                    <div class="pull-right" style="margin: 5px">
                        Total price: <b>50.00â‚¬</b>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




