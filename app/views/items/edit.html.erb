<div id="div-form" class="form-groupe mx-auto mb-3" style="max-width: 600px;">
  <h3>Update Item Details</h3>


  <%= form_for @item do |f| %>
    <div class="form-group">
      <label for="formGroupExampleInput">Example label</label>
      <p><%= f.text_field :name %></p>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Another label</label>
      <p><%= f.text_field :description %></p>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Another label</label>
      <p><%= f.text_field :price %></p>
    </div>
    <div class="form-group">
      <label for="formGroupExampleInput2">Another label</label>
      <p><%= f.text_field :image_url %></p>
    </div>

    <div class="submit"><%= f.submit "Update" %></div>
    <% end %>
</div>
